<!Doctype html>
<html>
<head>
	<title>
	Sort a string alphabetically
	</title>
</head>
<body>
<script>
    var userInput = prompt("Please enter a string to be sorted alphabetically");
    var inputCopy = userInput;
	//Function that accepts user input (string) and sorts it
	function sortString()
	{
	var unsortedArray = new Array();
	unsortedArray = inputCopy.split('');
	console.log("User input: " + "'" + unsortedArray.join("") +"'");
	var sortedArray = unsortedArray.sort();
	console.log("User input sorted: " + sortedArray);
	}
    sortString(inputCopy);

</script>
</body>
</html>
